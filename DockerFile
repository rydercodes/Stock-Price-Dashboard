# Dockerfile

# Start with a Python base image
FROM python:3.11

# Set the working directory in the container
WORKDIR /app

# Copy the project files into the container
COPY . /app

# Install TensorFlow from a mirror with a higher timeout
RUN pip install -i https://pypi.tuna.tsinghua.edu.cn/simple --default-timeout=1000 tensorflow==2.18.0

# Install the remaining dependencies using the same mirror
RUN pip install -i https://pypi.tuna.tsinghua.edu.cn/simple -r requirements.txt

# Expose the port for Streamlit
EXPOSE 8501

# Run the Streamlit app
CMD ["streamlit", "run", "dashboard.py", "--server.port=8501", "--server.address=0.0.0.0"]
